<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    
    <link rel="shortcut icon" href="./icon/caja2.ico" type="image/x-icon">
    <link rel="stylesheet" href="./css/generales.css">
    <link rel="stylesheet" href="./css/generales.css">
    <link rel="stylesheet" href="./css/login.css">
    <style>
        .form {
            max-width: 500px;
            margin-top: 18%;
        }

        /* Estilo del círculo */
        .image-preview-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 1rem;
        }

        .image-preview {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            border: 2px solid #13678A;
        }

        .image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .upload-label {
            margin-top: 0.5rem;
            color: #13678A;
            cursor: pointer;
            text-decoration: underline;
        }

        .upload-label:hover {
            color: #45c480;
        }

        input[type="file"] {
            display: none;
        }
    </style>
</head>

<body>
    <header class="header">
        <div class="container">
            <div class="btn-menu">
                <label for="btn-menu">☰</label>
            </div>
            <div class="logo">
                <a href="/">
                    <h1>Mystycrate</h1>
                </a>
            </div>
            <nav class="menu">
                <a href="../index.html">Inicio</a>
                <a href="informacion.html">Nosotros</a>
                <a href="/login">Iniciar sesion</a>
            </nav>
        </div>
    </header>

    <main>
        <div class="capa"></div>
        <input type="checkbox" id="btn-menu" />
        <div class="container-menu">
            <div class="cont-menu">
                <nav>
                    <a href="inventario.html">Inventario</a>
                    <a href="perfil.html">Perfil</a>
                    <a href="suscripciones.html">Suscripciones</a>
                    <a href="video.html">Video sobre la pagina</a>
                    <a href="/logout">Cerrar sesion</a>
                </nav>
                <label for="btn-menu">✖️</label>
            </div>
        </div>
        <form class="form" method="post" enctype="multipart/form-data">
            <!-- Campos existentes -->
            <div class="image-preview-container">
                <!-- Círculo para vista previa de la imagen -->
                <div class="image-preview" id="image-preview">
                    <span></span>
                </div>
                <!-- Botón para subir archivo -->
                <label for="profile_image" class="upload-label">Seleccionar imagen</label>
                <input type="file" name="profile_image" id="profile_image" accept="image/*" />
            </div>
            <div style="display: flex; gap: 1rem; width: 100%; margin-bottom: 1rem;">
                <span class="input-span" style="flex: 1;">
                    <label for="nombre" class="label">Nombres</label>
                    <input type="text" name="nombre" id="nombre" />
                </span>
                <span class="input-span" style="flex: 1;">
                    <label for="apellidos" class="label">Apellidos</label>
                    <input type="text" name="apellido" id="apellido" />
                </span>
            </div>
            <div style="display: flex; gap: 1rem; width: 100%; margin-bottom: 1rem;">
                <span class="input-span" style="flex: 1;">
                    <label for="fecha_nacimiento" class="label">Fecha de Nacimiento</label>
                    <input type="date" name="fecha_nacimiento" id="fecha_nacimiento" />
                </span>
                <span class="input-span" style="flex: 1;">
                    <label for="email" class="label">Correo</label>
                    <input type="email" name="correo" id="correo" />
                </span>
            </div>
            <div style="display: flex; gap: 1rem; width: 100%; margin-bottom: 1rem;">
                <span class="input-span" style="flex: 1;">
                    <label for="password" class="label">Contraseña</label>
                    <input type="password" name="password" id="password" />
                </span>
                <span class="input-span" style="flex: 1;">
                    <label for="confirm_password" class="label">Confirmar Contraseña</label>
                    <input type="password" name="confirm_password" id="confirm_password" />
                </span>
            </div>
            
            <input class="submit" type="submit" value="Registrarse" />
            <span class="span">¿Ya tienes una cuenta? <a href="/login">Inicia sesión</a></span>
            <% if (typeof message !== 'undefined') { %>
                <p style="color: red;"><%= message %></p>
            <% } %>
        </form>
        
        

    </main>

    <footer>
        <section class="footer">
            <h2><i><b>Mystycrate © 2024</b></i> all rights reserved</h2>
            <div class="social-icons">
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-solid fa-envelope"></i>
            </div>
        </section>
    </footer>

    <script>
        // Referencia al input de archivo y al contenedor de vista previa
        const fileInput = document.getElementById('profile_image');
        const previewContainer = document.getElementById('image-preview');

        // Función para mostrar la vista previa
        fileInput.addEventListener('change', (event) => {
            const file = event.target.files[0]; // Obtiene el archivo seleccionado

            if (file) {
                const reader = new FileReader();

                reader.onload = (e) => {
                    // Crea una imagen y la muestra en el círculo
                    previewContainer.innerHTML = `<img src="${e.target.result}" alt="Preview">`;
                };

                reader.readAsDataURL(file); // Lee el archivo como una URL
            } else {
                previewContainer.innerHTML = '<span>Cargar imagen</span>';
            }
        });
    </script>

    <script src="https://kit.fontawesome.com/003123b854.js" crossorigin="anonymous"></script>
    <script src="./js/registro.js"></script>
</body>

</html>